<html>
<head>
	<link rel="stylesheet" type="text/css" href="/stylesheets/index.css">
</head>
<body>
<div id="main">
	<img id="bluejeans" src="/images/bluejeans.jpg">
	<br />
	<% if error %>
		<p class="flash_error"><%= error %></p>
		<br />
	<% end %>
	<% if !launched %>
		<form action="/start_meeting">
			Meeting ID: <input type="text" name="meeting_id">
			<br />
			<br />
			<button type="submit">Submit</button>
		</form>
	<% else %>
		<form action="/stop_meeting">
			Currently in meeting <%= meeting_id %>.
			<br />
			<button type="submit">Stop Meeting</button>
		</form>
	<% end %>
</div>
</body>
</html>
